<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>redis</Name>
  <Overview>
   Redis[br][br]
   Redis is an open-source, networked, in-memory, key-value data store with optional durability.[br][br]
  
   If you plan to use Redis just as a cache where every key will have an expire set, you may consider using the following configuration instead:[br]
   > maxmemory 2mb
   > maxmemory-policy allkeys-lru
  </Overview>
  <Registry>https://hub.docker.com/_/redis</Registry>
  <Repository>redis:latest</Repository>
  <Privileged>false</Privileged>
  <Support>https://github.com/psdl/docker-templates/issues</Support>
  <Network>traefik_proxy</Network>
  <BindTime>true</BindTime>
  <Icon>https://raw.githubusercontent.com/psdl/docker-templates/images/redis.png</Icon>
  <Category>Network:Other Other: Tools:</Category>
  <Config 
    Type="Path" 
    Name="/usr/local/etc/redis" 
    Target="/usr/local/etc/redis" 
    Default="/mnt/user/appdata/redis" 
    Mode="rw" 
    Description="redis config directory." 
    Required="true">/mnt/user/appdata/redis</Config>
  <Config 
    Type="Variable" 
    Name="PUID" 
    Target="PUID" 
    Default="99" 
    Description="User ID." 
    Mask="false" 
    Display="advanced" 
    Required="true">99</Config>
  <Config 
    Type="Variable" 
    Name="GUID" 
    Target="GUID" 
    Default="100" 
    Description="Group ID." 
    Mask="false" 
    Display="advanced" 
    Required="true">100</Config>
  <Config 
    Type="sysctl" 
    Name="net.core.somaxconn" 
    Target="net.core.somaxconn" 
    Default="511" 
    Description="net.core.somaxconn" 
    Mask="false" 
    Display="advanced" 
    Required="true">511</Config>
  <Config 
    Type="sysctl" 
    Name="vm.nr_hugepages" 
    Target="vm.nr_hugepages" 
    Default="0" 
    Description="vm.nr_hugepages" 
    Mask="false" 
    Display="advanced" 
    Required="true">0</Config>
  <Config 
    Type="Label"
    Name="traefik.enable" 
    Target="traefik.enable" 
    Default="false" 
    Description="Set to true to enable this container in Traefik." 
    Mask="false" 
    Display="always-hide" 
    Required="true">false</Config>
  <Config 
    Type="Port" 
    Name="Redis port" 
    Target="6379" 
    Default="6379" 
    Mode="tcp" 
    Description="Redis Port to expose" 
    Display="always" 
    Required="true">6379</Config>
</Container>

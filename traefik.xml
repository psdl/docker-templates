<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>traefik</Name>
  <Overview>
   Traefik is a modern HTTP reverse proxy and load balancer that makes deploying microservices easy.
   
   > docker network create traefik_proxy
   
   > cd /mnt/user/appdata/traefik
   > touch acme.json
   > chmod 0600 acme.json
   
   Please create your traefik.toml with your settings !
  </Overview>
  <Registry>https://hub.docker.com/_/traefik</Registry>
  <Repository>traefik:latest</Repository>
  <Privileged>false</Privileged>
  <Support>https://github.com/psdl/docker-templates/issues</Support>
  <Network>traefik_proxy</Network>
  <WebUI>http://[IP]:[PORT:8080]/</WebUI>
  <Icon>https://raw.githubusercontent.com/psdl/docker-templates/images/traefik.png</Icon>
  <Category>Network:Web Network:Proxy</Category>
  <Config
    Type="Path"
    Name="/etc/traefik"
    Target="/etc/traefik"
    Default="/mnt/user/appdata/traefik"
    Mode="rw"
    Description=""
    Required="true">/mnt/user/appdata/traefik
  </Config>
  <Config
    Type="Path"
    Name="/var/run/docker.sock"
    Target="/var/run/docker.sock"
    Default="/var/run/docker.sock"
    Mode="ro"
    Description="UNIX Docker socket"
    Required="true">/var/run/docker.sock
  </Config>
  <Config
    Type="Variable"
    Name="traefik.enable"
    Target="traefik.enable"
    Default="true"
    Description="traefik.enable"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.backend"
    Target="traefik.backend"
    Default="traefik"
    Description="traefik.backend"
    Mask="false"
    Display="always"
    Required="true">traefik
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.rule"
    Target="traefik.frontend.rule"
    Default="traefik.domain.com"
    Description="traefik.frontend.rule"
    Mask="false"
    Display="always"
    Required="true">traefik.domain.com
  </Config>
  <Config
    Type="Variable"
    Name="traefik.port"
    Target="traefik.port"
    Default="8080"
    Description="traefik.port"
    Mask="false"
    Display="always"
    Required="true">8080
  </Config>
  <Config
    Type="Variable"
    Name="traefik.docker.network"
    Target="traefik.docker.network"
    Default="traefik_proxy"
    Description="traefik.docker.network"
    Mask="false"
    Display="always"
    Required="true">traefik_proxy
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.SSLRedirect"
    Target="traefik.frontend.headers.SSLRedirect"
    Default="true"
    Description="traefik.frontend.headers.SSLRedirect"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.STSSeconds"
    Target="traefik.frontend.headers.STSSeconds"
    Default="315360000"
    Description="traefik.frontend.headers.STSSeconds"
    Mask="false"
    Display="always"
    Required="true">315360000
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.browserXSSFilter"
    Target="traefik.frontend.headers.browserXSSFilter"
    Default="true"
    Description="traefik.frontend.headers.browserXSSFilter"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.contentTypeNosniff"
    Target="traefik.frontend.headers.contentTypeNosniff"
    Default="true"
    Description="traefik.frontend.headers.contentTypeNosniff"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.forceSTSHeader"
    Target="traefik.frontend.headers.forceSTSHeader"
    Default="true"
    Description="traefik.frontend.headers.forceSTSHeader"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.SSLHost"
    Target="traefik.frontend.headers.SSLHost"
    Default="domain.com"
    Description="traefik.frontend.headers.SSLHost"
    Mask="false"
    Display="always"
    Required="true">domain.com
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.STSIncludeSubdomains"
    Target="traefik.frontend.headers.STSIncludeSubdomains"
    Default="true"
    Description="traefik.frontend.headers.STSIncludeSubdomains"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.STSPreload"
    Target="traefik.frontend.headers.STSPreload"
    Default="true"
    Description="traefik.frontend.headers.STSPreload"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Variable"
    Name="traefik.frontend.headers.frameDeny"
    Target="traefik.frontend.headers.frameDeny"
    Default="true"
    Description="traefik.frontend.headers.frameDeny"
    Mask="false"
    Display="always"
    Required="true">true
  </Config>
  <Config
    Type="Port"
    Name="HTTP Port"
    Target="80"
    Default="80"
    Mode="tcp"
    Description="HTTP Port"
    Display="always"
    Required="true">80
  </Config>
  <Config
    Type="Port"
    Name="HTTPS Port"
    Target="443"
    Default="443"
    Mode="tcp"
    Description="HTTPS Port"
    Display="always"
    Required="true">443
  </Config>
   <Config
    Type="Port"
    Name="WebUI Port"
    Target="8080"
    Default="8080"
    Mode="tcp"
    Description="WebUI Port"
    Display="always"
    Required="true">8080
  </Config>
</Container>

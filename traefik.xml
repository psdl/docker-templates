<?xml version="1.0"?>
<Container version="2">
  <Name>traefik</Name>
  <Repository>traefik:latest</Repository>
  <Registry>library/traefik - Docker Hub</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/psdl/docker-templates/issues</Support>
  <Project/>
  <Overview>Traefik is a modern HTTP reverse proxy and load balancer that makes deploying microservices easy.</Overview>
  <Category>Network:Web Network:Proxy</Category>
  <WebUI>http://127.0.0.1:8080/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/psdl/docker-templates/master/traefik.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/psdl/docker-templates/master/images/traefik.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1543869167</DateInstalled>
  <Description>Traefik is a modern HTTP reverse proxy and load balancer that makes deploying microservices easy.</Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>80</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>443</HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>8080</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/traefik</HostDir>
      <ContainerDir>/etc/traefik</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/run/docker.sock</HostDir>
      <ContainerDir>/var/run/docker.sock</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels>
    <Label>
      <Value>true</Value>
      <Name>traefik.enable</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>traefik</Value>
      <Name>traefik.backend</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>Host:traefik.domain.com</Value>
      <Name>traefik.frontend.rule</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>8080</Value>
      <Name>traefik.port</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>proxy</Value>
      <Name>traefik.docker.network</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.SSLRedirect</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>315360000</Value>
      <Name>traefik.frontend.headers.STSSeconds</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.browserXSSFilter</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.contentTypeNosniff</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.forceSTSHeader</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>domain.com</Value>
      <Name>traefik.frontend.headers.SSLHost</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.STSIncludeSubdomains</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.STSPreload</Name>
      <Mode/>
    </Label>
    <Label>
      <Value>true</Value>
      <Name>traefik.frontend.headers.frameDeny</Name>
      <Mode/>
    </Label>
  </Labels>
  <Config Name="HTTP port" Target="80" Default="80" Mode="tcp" Description="http port to expose" Type="Port" Display="always" Required="false" Mask="false">80</Config>
  <Config Name="HTTPS port" Target="443" Default="443" Mode="tcp" Description="HTTPS port to expose" Type="Port" Display="always" Required="false" Mask="false">443</Config>
  <Config Name="WebUI port" Target="8080" Default="8080" Mode="tcp" Description="WebUI port to expose" Type="Port" Display="always" Required="false" Mask="false">8080</Config>
  <Config Name="Config directory" Target="/etc/traefik" Default="/mnt/user/appdata/traefik" Mode="rw" Description="Path to traefik.toml" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/traefik</Config>
  <Config Name="docker socket" Target="/var/run/docker.sock" Default="/var/run/docker.sock" Mode="ro" Description="Docker server endpoint. Can be a tcp or a unix socket endpoint." Type="Path" Display="advanced" Required="true" Mask="false">/var/run/docker.sock</Config>
  <Config Name="traefik.enable" Target="traefik.enable" Default="false" Mode="" Description="set to false to NOT proxy this application" Type="Label" Display="always" Required="false" Mask="false">false</Config>
  <Config Name="traefik.backend" Target="traefik.backend" Default="traefik" Mode="" Description="Overrides the container name by foo in the generated name of the backend." Type="Label" Display="always" Required="true" Mask="false">traefik</Config>
  <Config Name="traefik.frontend.rule" Target="traefik.frontend.rule" Default="Host:traefik.domain.com" Mode="" Description="Overrides the default frontend rule. Default: Host:{containerName}.{domain}" Type="Label" Display="always" Required="false" Mask="false">Host:traefik.domain.com</Config>
  <Config Name="traefik.port" Target="traefik.port" Default="8080" Mode="" Description="Registers this port. Useful when the container exposes multiples ports." Type="Label" Display="advanced" Required="true" Mask="false">8080</Config>
  <Config Name="traefik.docker.network" Target="traefik.docker.network" Default="default" Mode="" Description="Overrides the default docker network to use for connections to the container." Type="Label" Display="advanced" Required="true" Mask="false">default</Config>
  <Config Name="traefik.frontend.headers.SSLRedirect" Target="traefik.frontend.headers.SSLRedirect" Default="true" Mode="" Description="Forces the frontend to redirect to SSL if a non-SSL request is sent." Type="Label" Display="advanced" Required="true" Mask="false">true</Config>
  <Config Name="traefik.frontend.headers.STSSeconds" Target="traefik.frontend.headers.STSSeconds" Default="315360000" Mode="" Description="Sets the max-age of the STS header." Type="Label" Display="advanced" Required="true" Mask="false">315360000</Config>
  <Config Name="traefik.frontend.headers.browserXSSFilter" Target="traefik.frontend.headers.browserXSSFilter" Default="true" Mode="" Description="Adds the X-XSS-Protection header with the value 1; mode=block." Type="Label" Display="advanced" Required="true" Mask="false">true</Config>
  <Config Name="traefik.frontend.headers.contentTypeNosniff" Target="traefik.frontend.headers.contentTypeNosniff" Default="true" Mode="" Description="Adds the X-Content-Type-Options header with the value nosniff." Type="Label" Display="advanced" Required="true" Mask="false">true</Config>
  <Config Name="traefik.frontend.headers.forceSTSHeader" Target="traefik.frontend.headers.forceSTSHeader" Default="false" Mode="" Description="Adds the STS header to non-SSL requests." Type="Label" Display="advanced" Required="true" Mask="false">false</Config>
  <Config Name="traefik.frontend.headers.SSLHost" Target="traefik.frontend.headers.SSLHost" Default="domain.com" Mode="" Description="This setting configures the hostname that redirects will be based on. Default is "", which is the same host as the request." Type="Label" Display="advanced" Required="true" Mask="false">domain.com</Config>
  <Config Name="traefik.frontend.headers.STSIncludeSubdomains" Target="traefik.frontend.headers.STSIncludeSubdomains" Default="true" Mode="" Description="Adds the IncludeSubdomains section of the STS header." Type="Label" Display="advanced" Required="true" Mask="false">true</Config>
  <Config Name="traefik.frontend.headers.STSPreload" Target="traefik.frontend.headers.STSPreload" Default="true" Mode="" Description="Adds the preload flag to the STS header." Type="Label" Display="advanced" Required="true" Mask="false">true</Config>
  <Config Name="traefik.frontend.headers.frameDeny" Target="traefik.frontend.headers.frameDeny" Default="false" Mode="" Description="Adds the X-Frame-Options header with the value of DENY." Type="Label" Display="advanced" Required="true" Mask="false">false</Config>
</Container>
